<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TucanchayaV1.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="Titulo">
                <Setter Property="TextColor" Value="Green"></Setter>
                <Setter Property="FontSize" Value="28"></Setter>
                <Setter Property="FontAttributes" Value="Bold,Italic"></Setter>
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"></Setter>
                <Setter Property="VerticalOptions" Value="CenterAndExpand"></Setter>

            </Style>
            <Style TargetType="Label" x:Key="Centro">
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="Entry" x:Key="Color">
                <Setter Property="BackgroundColor" Value="Green"></Setter>
                
            </Style>
        </ResourceDictionary>

    </Application.Resources>
</Application>